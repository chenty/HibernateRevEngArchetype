#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-reverse-engineering PUBLIC "-//Hibernate/Hibernate Reverse Engineering DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-reverse-engineering-3.0.dtd" >

<hibernate-reverse-engineering>

	<schema-selection  match-catalog="${dbUser.toUpperCase()}" match-schema="${dbUser.toUpperCase()}" match-table=".*" />

    <type-mapping>
        <sql-type jdbc-type="NUMERIC" scale="0"
            hibernate-type="java.lang.Integer" />
        <sql-type jdbc-type="NUMERIC" hibernate-type="java.lang.Double" />
        <sql-type jdbc-type="DECIMAL" scale="0"
            hibernate-type="java.lang.Integer" />
        <sql-type jdbc-type="DECIMAL" hibernate-type="java.lang.Double" />
        <sql-type jdbc-type="REAL" scale="0"
            hibernate-type="java.lang.Integer" />
        <sql-type jdbc-type="REAL" hibernate-type="java.lang.Double" />
        <sql-type jdbc-type="DATE" hibernate-type="timestamp" />
        <sql-type jdbc-type="TIMESTAMP" hibernate-type="timestamp" />
        <sql-type jdbc-type="TIME" hibernate-type="timestamp" />
    </type-mapping>
    
</hibernate-reverse-engineering>